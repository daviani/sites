{
  "name": "sites",
  "version": "1.0.0",
  "private": true,
  "description": "Portfolio multi-domaines avec Turborepo + Next.js 16",
  "author": "Daviani Fillatre",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "playwright test --project=e2e",
    "test:smoke": "playwright test --project=smoke",
    "test:a11y": "playwright test --project=a11y",
    "test:all": "turbo run test && playwright test --project=smoke --project=a11y --project=e2e",
    "clean": "turbo run clean && rm -rf node_modules .turbo coverage **/coverage playwright-report test-results"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^8.55.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.1.0",
    "turbo": "^2.1.0",
    "typescript": "^5.3.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.22.0",
  "pnpm": {
    "overrides": {
      "glob": ">=10.5.0",
      "js-yaml": ">=3.14.2"
    }
  },
  "dependencies": {
    "puppeteer": "^24.34.0"
  }
}
